{
  "name": "@gabliam/core",
  "version": "2.4.0",
  "description": "express with decorator",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "changelog": "conventional-changelog -i  CHANGELOG.md -s",
    "precommit": "lint-staged",
    "build-test": "npm run build && npm run test",
    "build": "rimraf lib && npm run lint && tsc -p tsconfig.build.json",
    "prepublish": "publish-please guard",
    "prettier": "prettier --single-quote --write --parser typescript src/**/*.ts",
    "lint": "tslint --type-check --project tsconfig.json 'src/**/*.ts'",
    "test": "mocha --no-timeouts  --require ./mochaConfig.js --compilers ts:ts-node/register test/",
    "publish-please": "publish-please"
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  },
  "files": [
    "lib",
    "src"
  ],
  "peerDependencies": {
    "joi": "^10.2.2"
  },
  "dependencies": {
    "debug": "^2.6.1",
    "glob": "^7.1.1",
    "inversify": "^3.1.0",
    "inversify-logger-middleware": "^3.0.0",
    "js-yaml": "^3.8.1",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/debug": "^0.0.29",
    "@types/glob": "^5.0.30",
    "@types/joi": "^10.0.1",
    "@types/js-yaml": "^3.5.29",
    "@types/lodash": "^4.14.53",
    "@types/mocha": "^2.2.41",
    "@types/reflect-metadata": "^0.0.5",
    "chai": "^4.0.2",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.4",
    "joi": "^10.2.2",
    "lint-staged": "^3.6.0",
    "mocha": "^3.4.2",
    "prettier": "^1.4.2",
    "publish-please": "^2.3.1",
    "reflect-metadata": "^0.1.9",
    "rimraf": "^2.6.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.2.0",
    "tslint-eslint-rules": "^4.0.0",
    "typescript": "^2.3.2",
    "vrsource-tslint-rules": "^5.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabliam/core.git"
  },
  "author": "David Touzet <dtouzet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabliam/core/issues"
  },
  "homepage": "https://github.com/gabliam/core#readme"
}
