{
  "name": "@gabliam/core",
  "version": "2.8.0",
  "description": "Gabliam is on top of inversify",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "changelog": "conventional-changelog -i  CHANGELOG.md -s",
    "precommit": "lint-staged",
    "build-test": "npm run build && npm run test",
    "build": "rimraf lib && npm run lint && tsc -p tsconfig.build.json",
    "prepublish": "publish-please guard",
    "prettier": "prettier --single-quote --write --parser typescript {src,test}/**/*.ts",
    "lint": "tslint --type-check --project tsconfig.json '{src,test}/**/*.ts'",
    "test": "jest",
    "publish-please": "publish-please"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --write --parser typescript",
      "tslint --type-check --project tsconfig.json",
      "git add"
    ]
  },
  "files": [
    "lib",
    "src"
  ],
  "peerDependencies": {
    "joi": "^10.2.2"
  },
  "dependencies": {
    "caller": "^1.0.1",
    "debug": "^3.0.0",
    "glob": "^7.1.1",
    "inversify": "^4.3.0",
    "inversify-logger-middleware": "^3.0.0",
    "js-yaml": "^3.8.1",
    "lodash": "^4.17.4",
    "shortstop": "^1.0.3",
    "shortstop-handlers": "^1.0.1"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/glob": "^5.0.30",
    "@types/jest": "^20.0.2",
    "@types/joi": "^10.0.1",
    "@types/js-yaml": "^3.5.29",
    "@types/lodash": "^4.14.53",
    "@types/mock-fs": "^3.6.30",
    "@types/reflect-metadata": "^0.0.5",
    "@types/sinon": "^2.3.3",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-serializer-path": "^0.1.3",
    "joi": "^10.2.2",
    "lint-staged": "^4.0.2",
    "mock-fs": "^4.4.1",
    "prettier": "^1.4.2",
    "publish-please": "^2.3.1",
    "reflect-metadata": "^0.1.9",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.0",
    "sinon": "^3.2.0",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.0.6",
    "tslint": "^5.2.0",
    "tslint-eslint-rules": "^4.0.0",
    "typescript": "^2.3.2",
    "vrsource-tslint-rules": "^5.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/interfaces/**",
      "!src/testing/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage_jest_raw",
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.js",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*)\\.test\\.(ts|tsx|js)$",
    "snapshotSerializers": [
      "jest-serializer-path"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabliam/core.git"
  },
  "author": "David Touzet <dtouzet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabliam/core/issues"
  },
  "homepage": "https://github.com/gabliam/core#readme"
}
